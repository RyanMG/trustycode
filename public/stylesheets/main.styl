html
  background-color #fff
  font-family Arial, Helvetica, sans-serif

body
  margin 0
  padding 0

.wrapper
  width 960px
  margin 0 auto
  height 100%

.ul-base-style
  padding 0
  margin 0 auto

/* HEADER STYLES */
header
  background-color #222
  width 100%
  height 80px
  position fixed
  top 0
  left 0

  h2
    font-size 45px
    margin 0
    padding 16px 0 0 15px
    float left
    color #999
  
  nav
    float right
    width 440px
    height 30px
    padding 30px 15px 0 0

    li.nav-link
      display inline-block
      list-style none
      font-size 20px
      padding-left 25px
      color #999

    li.nav-link:hover
      color #bbb
      cursor pointer

/* MAIN PAGE CONTENT */
.bigImage
  margin-top 100px
  width 100%
  height 600px
  background-position center center
  background-size cover

/* FOOTER STYLES */
footer
  height 100px
  width 90%
  border-top 1px solid #999
  margin 10px auto 0 auto

  .social-media-block
    width 500px


  ul
    width 300px
    
    li.footer-link
      color #999
      display inline-block
      list-style none
      text-align center
      padding 10px 10px 0 10px

    li.footer-link:hover
      color #333
      cursor pointer
