/*
  variable definitions
*/
white = #f9f8f5
tan = #e0d9d5
dkbrown = #764925
offblack = #232732

#about
  background-color white
  height 655px

  h3
    padding 10px 80px 0px
    text-align center
    color offblack
  
  .about-blurbs
    width 900px
    margin 0 20px

    .about-code, .about-design, .about-photo
      width 260px
      height 400px
      padding 20px
      float left
    
      .about-img
        height 192px
        width 192px
        margin 0 0 0 34px

      h2
        color offblack
        text-align center
        font-size 35px
        margin 10px 0

      h4
        color offblack
        text-align center
        font-size 15px
        letter-spacing 1px
        line-height 17px
        margin 0
        padding 0px 10px