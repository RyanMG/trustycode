/*
  variable definitions
*/
white = #f9f8f5
tan = #e0d9d5
dkbrown = #764925
offblack = #232732

html
  background-color white
  font-family Arial, Helvetica, sans-serif
  z-index 1
  background url('../images/landing-page-bg.jpg') no-repeat center center fixed
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover

body
  margin 0
  padding 0
  width 100%
  min-height 500px

.wrapper
  width 960px
  margin 0 auto
  height 100%

nav
  z-index 11
  position fixed
  top 0
  width 100%
  height 60px
  background-color dkbrown
  
  .header-logo
    height 50px
    margin-top 5px
    margin-left 10px
    float left

  ul
    text-align right
    width 580px
    margin-top 22px
    margin-right 10px
    float right
    overflow hidden

    li.nav-link
      display inline-block
      list-style none
      font-size 12px
      padding-left 35px
      color white

    li.nav-link:hover
      color #bbb
      cursor pointer


header
  position relative
  z-index 2
  min-height 200px
  
  .main-logo
    width 500px
    position absolute
    left 50%
    top 50%
    margin-left -80px
    margin-top -150px

  .header-band
    width 100%
    height 90px
    position absolute
    top 70%
    background-color #111
    opacity .8

    .header-band-img
      height 80px
      position absolute
      left 48%
      margin-top 10px

section
  display block
  width 100%
  height 570px

.headline
  color offblack
  font-size 47px
  margin 0
  padding-top 20px
  letter-spacing 1px
  text-align center

.headline:before
  content '{'
  padding-right 8px
  font-size 55px
  color dkbrown

.headline:after
  content: '}'
  padding-left 6px
  font-size 55px
  color dkbrown


#code
  background-color tan

#design
  background-color white

#photography
  background-color tan

#contact
  background-color white
  height 475px
